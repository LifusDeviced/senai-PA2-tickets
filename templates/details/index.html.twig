{% extends 'base.html.twig' %}

{% block title %}Details{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-10">
                <div class="card bg-light m-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12 text-center py-5">
                                <h2 class="titleDetails text-primary"> Detalhes do Evento </h2>
                            </div>
                        </div>
                        <div class="row align-items-center">
                            <div class="col-6">
                                <img
                                    class="img-fluid col-12 offset-1"
                                    src="{{ event.link_imagem }}"
                                    alt="foto"
                                >
                            </div>
                            <div class="col-6 px-4" >
                                <h3 class="text-center m-3"> {{ evento.nome_evento}} </h3>
                                <div class="row">
                                    <p class="titleLocal">Local:</p>
                                    <p class="textLocal" style="font-size: 15px">{{ evento.id_local_evento.nome_local }}</p>
                                </div>
                                <div class="row" style="width: 100%; flex-direction: row; text-align: start">
                                    <p class="titlePrice" style="font-size: 15px; margin-left: 10px; color: black">Valor</p>
                                    <p class="textPrice" style="font-size: 15px">{{ evento.valor}}</p>
                                </div>
                                <div class="row" style="width: 100%; flex-direction: row; text-align: start">
                                    <p class="titleDate" style="font-size: 15px; margin-left: 10px; color: black">Data</p>
                                    <p class="textPrice" style="font-size: 15px">{{ evento.data|date("d/m/Y")}}</p>
                                </div>
                                <div class="row" style="width: 100%; flex-direction: row; text-align: start">
                                    <p class="titleDate" style="font-size: 15px; margin-left: 10px; color: black">Horário</p>
                                    <p class="textPrice" style="font-size: 15px">{{ evento.data|date("HH")}}</p>
                                </div>

                            </div>
                        </div>
                        <div class="row justify-content-center ">
                            <div class="col-10 text-center m-3 ">
                                <p class="text">{{ event.descricao }}
                            </div>
                        </div>
                        <div class="row justify-content-end mr-3">
                            <button type="button" class=" btn btn-success" data-toggle="modal" data-target="#exampleModal">
                                Comprar Aqui!
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-primary " id="exampleModalLabel">Falta pouco, finalize sua compra</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="cardNumber">Numero do Cartão</label>
                            <input type="text" class="form-control" id="cardNumber" aria-describedby="emailHelp" placeholder="numero do Cartão">
                        </div>
                        <div class="form-group">
                            <label for="CVV">CVV</label>
                            <input type="text" class="form-control" id="CVV" placeholder="CVV">
                        </div>
                        <div class="form-group">
                            <label for="validate">validate</label>
                            <input type="text" class="form-control" id="validate" placeholder="validade">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
